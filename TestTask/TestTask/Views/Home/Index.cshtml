@model List<Employee>

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Married</th>
            <th>Phone</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><span>@employee.Id</span></td>
                <td><span>@employee.Name</span></td>
                <td><span>@employee.DateOfBirth.ToShortDateString()</span></td>
                <td><span>@employee.Married</span></td>
                <td><span>@employee.Phone</span></td>
                <td><span>@employee.Salary</span></td>
                <td>
                    <a href="#">Edit</a> |
                    <a href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
