@model List<Employee>

<h2>Employees</h2>

<form method="post" asp-controller="Home" asp-action="Upload" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>

<div class="filter">
    <label for="filter">Search:</label>
    <input type="text" id="filter" />
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Married</th>
            <th>Phone</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><span>@employee.Id</span></td>
                <td><span class="editable" data-field="Name" data-id="@employee.Id">@employee.Name</span></td>
                <td><span class="editable" data-field="DateOfBirth" data-id="@employee.Id">@employee.DateOfBirth.ToShortDateString()</span></td>
                <td><span class="editable" data-field="Married" data-id="@employee.Id">@employee.Married</span></td>
                <td><span class="editable" data-field="Phone" data-id="@employee.Id">@employee.Phone</span></td>
                <td><span class="editable" data-field="Salary" data-id="@employee.Id">@employee.Salary</span></td>
                <td>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" class="delete-link">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
